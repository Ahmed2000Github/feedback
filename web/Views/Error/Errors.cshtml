@model ErrorVM
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
    <link rel="stylesheet" href="~/Css/Error.css">
</head>
<body>
    <div class="container">
        <div class="title"><h1>@Model.Title</h1></div>
        <div class="description">
            <h2>Description for this error:</h2>
            <p>
                @Model.Description
            </p>
        </div>
        <div class="advice">
            <h2>Some advices to do :</h2>
            <ul>
                @if (Model.Advices == null)
                {
                    <li>No Advice for this error</li>
                }
                else
                {
                    foreach (string item in Model.Advices)
                    {
                        <li>@item</li>
                    }
                }
            </ul>
        </div>
        <div class="link">
            <h4><span>Return <a href="@ViewBag.ReturnBack">Back</a></span></h4>
        </div>
    </div>
</body>
</html>
